package myPractice;

import java.util.Scanner;

class Exercise8 {

	public static void main(String[] args) {
		Scanner in=new Scanner(System.in);
		
		/* Write a program which calculates marks on basis of given grades in java using switch statement
		 * if marks >=90 then Excellent: Grade A
		 * if marks >=80 and less than 90  then Very Good: Grade B  
		 * if marks >=70 and less than 80 then Good: Grade C 
		 * if marks >=60 and less than 70 then Good: Grade D
		 * if marks >=50 and less than 60 then Good: Grade E
		 * if marks >=40 and less than 50 then Just Passed: Grade F
		 * if any other marks then print Failed!*/
		
		int mark;
		
		System.out.print("Enter your percentage marks : ");
		mark=in.nextInt();
		
		if(mark>=90)
			System.out.print("Excellent: Grade A");
		
		else if((mark>=80) && (mark<90))
			System.out.print(" Very Good: Grade B ");
		
		else if((mark>=70) && (mark<80))
			System.out.print(" Good: Grade C ");
		
		else if((mark>=60) && (mark<70))
			System.out.print(" Good: Grade D ");
		
		else if((mark>=50) && (mark<60))
			System.out.print(" Good: Grade E ");
		
		else if((mark>=40) && (mark<50))
			System.out.print(" Just Passed: Grade F ");
		
		else
			System.out.print("Failed!");
		
		
		
	}

}
