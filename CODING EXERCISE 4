package myPractice;

import java.util.Scanner;

class Exercise4 {

	public static void main(String[] args) {
		Scanner in=new Scanner(System.in);
		
		/*Use scanner input, Enter integer number. Jika  number 20 sama dengan input number, 
		print number tersebut*/
		int num;
		
		System.out.print("Enter your number (10/20/30) : ");
		num=in.nextInt();
		
		if(num==10)
			System.out.print("You choose number " +num);
		else if(num==20)
			System.out.print("You choose number " +num);
		else if(num==30)
			System.out.print("You choose number " +num);
		else
			System.out.print("You choose invalid number!");
			
		
		

	}

}
