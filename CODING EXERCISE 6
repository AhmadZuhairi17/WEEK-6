package myPractice;

import java.util.Scanner;

class Exercise6 {

	public static void main(String[] args) {
		Scanner in=new Scanner(System.in);
		
		 /* Write a program which calculates marks on basis of given grades in java using selection statement
		 * if Grade A then marks >=90
		 * if Grade B then marks >=80 and less than 90
		 * if Grade C then marks >=70 and less than 80
		 * if Grade D then marks >=60 and less than 70
		 * if Grade E then marks >=50 and less than 60
		 * if Grade F then marks <=40
		 * if any other grade is passed then print invalid grade*/
		
		char grade;
		
		System.out.print("Enter your Grade : ");
		grade=in.next().charAt(0);
		
			
		if(grade=='A')
			System.out.print("marks >=90");
		
		else if(grade=='B')
			System.out.print("marks >=80 and less than 90");
			
		else if(grade=='C')
			System.out.print("marks >=70 and less than 80");
		
		else if(grade=='D')
			System.out.print("marks >=60 and less than 70");
		    
		else if(grade=='E')
			System.out.print("marks >=40 and less than 60");	
		    
		else if(grade=='F')
			System.out.print("marks <=40");
		
		else
			System.out.print("Invalid marks");
			
	}

}
